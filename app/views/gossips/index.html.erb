<html>
  <head>
    <title>Home - The Gossip Project</title>


  <body> 
  	
    <!-- Bootstrap core CSS -->
    <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/3-col-portfolio.css" rel="stylesheet">


  </head>


  <body>

    <!-- Page Content -->
    <div class="container">

      <!-- Page Heading -->

    <% if current_user %>
      <h1 class="my-4">Welcome <%=current_user.first_name%> !</h1>
      <%else %> 
      <h1 class="my-4">Welcome dans le monde de gossip !</h1>
      <%end%>
      <p> <%= link_to "Soumettre un nouveau gossip", new_gossip_path %> </p> 
        <h1> <small> Voici tous les potins :</small> </h1>
    

        <% @gossips.each do |gossip| %>
   	
		      <div class="card" style = "margin-bottom:25px" >
		  <div class="card-header" >
		  </div>
		  <div class="card-body">
		    <h5 class="card-title"><%= gossip.title %></h5>
		    <p class="card-text"><%= gossip.content %></p>
		    <a class="btn btn-primary" <%= link_to "Go to gossip page", gossip_path(gossip) %> </a>
		  </div>
		</div>

      <%end%>


    <!-- Footer -->
    <footer class="py-5 bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">Copyright &copy; The Gossip Project 2018</p>
      </div>
      <!-- /.container -->
    </footer>
</body>
</html>