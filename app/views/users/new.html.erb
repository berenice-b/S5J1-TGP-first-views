<body>
	<center>
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= label_tag 'first_name' %>
      <%= text_field_tag 'first_name', '' %>
      <br /> <br />
	    <%= label_tag 'last_name' %>
      <%= text_field_tag 'last_name', '' %>
      <br /> <br />
	    <%= label_tag 'email' %>
      <%= text_field_tag 'email', '' %>
      <br /> <br />
      <%= label_tag 'password' %>
      <%= text_area_tag 'password', '' %>
      <br /> <br />
      <%= submit_tag "Create account" %>
      <% end %>
	</center>
</body>
</html>
