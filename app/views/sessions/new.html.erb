<body class=".bg-light">
<center>
    <div class="jumbotron col-6">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <%= label_tag 'Your email' %>
      <%= text_field_tag 'email' %>
      <br /> <br />
      <%= label_tag 'Your password' %>
      <%= password_field_tag 'password' %>
      <br /> <br />
      <%= submit_tag "Login" %><i class="far fa-user"></i>
    <% end %>
    </div>
    </center>
</body>
</html>
